---
import { Image } from "astro:assets";
import HeroImage from "../assets/menix-in-qemu-cropped.png";
import Button from "./reusable/Button.astro";
---

<section class="flex overflow-hidden mt-15 ml-10 items-center">
    <div class="flex-1 text-4xl">
        <div class="w-3/4 mx-auto pb-30">
            <h2 class="leading-13 max-w-2xl font-semibold">
                A modular 64-bit kernel written in Rust with a familiar,
                POSIX-like interface
            </h2>

            <div class="mt-7">
                <Button> Quick Start </Button>
            </div>
        </div>
    </div>
    <Image
        src={HeroImage}
        alt="screenhsot of menix running in qemu"
        height={650}
        loading={"eager"}
    />
</section>
